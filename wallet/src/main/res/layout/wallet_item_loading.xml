<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#55000000"
        android:paddingHorizontal="@dimen/spacing_4x">

        <ImageView
            android:id="@+id/image_crypto_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/gray_50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_crypto_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_2x"
            android:layout_marginTop="@dimen/spacing_2x"
            android:background="@color/gray_50"
            android:text="Bitcoin"
            android:textColor="@android:color/transparent"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/text_crypto_base"
            app:layout_constraintStart_toEndOf="@id/image_crypto_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_crypto_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="@dimen/spacing_2x"
            android:background="@color/gray_50"
            android:text="BTC"
            android:textColor="@android:color/transparent"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/text_crypto_name"
            app:layout_constraintTop_toBottomOf="@id/text_crypto_name" />

        <TextView
            android:id="@+id/text_crypto_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gray_50"
            android:text="20.0"
            android:textColor="@android:color/transparent"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>